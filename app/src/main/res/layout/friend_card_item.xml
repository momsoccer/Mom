<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    >

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/friend_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="2dp"
        android:orientation="vertical"
        card_view:contentPadding="3dp"
        card_view:cardBackgroundColor="@color/mom_color3"
        >

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <LinearLayout
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <ImageView
                    android:src="@drawable/ic_ball_subject"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/frflag"
                    android:text="@string/friend_req_text"
                    android:textColor="@color/color6"
                    android:textSize="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

                <TextView
                    android:layout_marginLeft="50dp"
                    android:id="@+id/creation_date"
                    android:text="2015년 10월 10일 오후 10시 40분"
                    android:textColor="@color/color6"
                    android:textSize="8sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>

            <ImageView
                android:layout_marginTop="20dp"
                android:background="@drawable/card_rectangle"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                />

            <LinearLayout
                android:layout_marginTop="22dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                >

                <ImageView
                    android:layout_marginTop="2dp"
                    android:id="@+id/colorBorder"
                    android:background="@drawable/card_rectangle"
                    android:layout_width="5dp"
                    android:layout_height="40dp"
                    />

                <ImageView
                    android:id="@+id/userimg"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/userimg"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_marginLeft="3dp"
                        android:id="@+id/username"
                        android:text="유저명"
                        android:textSize="10sp"
                        android:textColor="@color/color6"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:maxLength="8"
                        />

                    <TextView
                        android:layout_marginLeft="3dp"
                        android:id="@+id/teamname"
                        android:text="팀명"
                        android:textSize="8sp"
                        android:textColor="@color/color6"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:maxLength="8"
                        />

                </LinearLayout>

                <TextView
                    android:layout_marginLeft="2dp"
                    android:text="@string/score_title"
                    android:textColor="@color/color6"
                    android:textSize="8sp"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginLeft="3dp"
                    android:id="@+id/score"
                    android:text="220"
                    android:textColor="@color/color6"
                    android:textSize="8sp"
                    android:layout_width="35dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/level"
                    android:text="0"
                    android:gravity="center"
                    android:textColor="@color/color6"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/ic_levelmark"
                    android:layout_width="35dp"
                    android:layout_height="37dp" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    >

                    <Button
                        android:id="@+id/rejectbtn"
                        android:gravity="center"
                        android:text="@string/friend_reject_btn"
                        android:textSize="8sp"
                        style="@style/btnStylePaprika"
                        android:layout_width="50dp"
                        android:layout_height="30dp" />

                    <Button
                        android:id="@+id/acceptBtn"
                        android:layout_marginLeft="3dp"
                        android:gravity="center"
                        android:text="@string/mom_diaalog_cancel"
                        android:textSize="8sp"
                        style="@style/btnStylePaprika"
                        android:layout_width="50dp"
                        android:layout_height="30dp" />
                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>