<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/mom_color1"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:orientation="vertical"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="5dp"
        card_view:contentPadding="5dp"
        card_view:cardBackgroundColor="@color/color8"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/xml_card_board"
            >

            <View
                android:background="@drawable/xml_list_divider"
                android:layout_width="match_parent"
                android:layout_height="5dp"/>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/userimg"
                            android:layout_centerVertical="true"
                            android:src="@drawable/userimg"
                            android:layout_width="45dp"
                            android:layout_height="45dp" />

                        <TextView
                            android:id="@+id/level"
                            android:layout_marginTop="23dp"
                            android:layout_marginLeft="-20dp"
                            android:text="12"
                            android:textColor="@color/color6"
                            android:textSize="8sp"
                            android:textStyle="bold"
                            android:background="@drawable/ic_levelmark"
                            android:gravity="center"
                            android:layout_width="20dp"
                            android:layout_height="22dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginLeft="55dp"
                        android:layout_centerVertical="true"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/username"
                            android:text="김연태"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/mom_color4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:text="@string/member_title3"
                                android:textSize="13sp"
                                android:textColor="@color/color8"
                                android:layout_width="120dp"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:id="@+id/joindate"
                                android:text="김연태"
                                android:textSize="13sp"
                                android:textColor="@color/color8"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_marginLeft="55dp"
                        android:layout_centerVertical="true"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:text="@string/user_mission_detail_tx3"
                                android:textSize="14sp"
                                android:textColor="@color/mom_color4"
                                android:layout_width="120dp"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:id="@+id/totalscore"
                                android:text="1230"
                                android:textSize="14sp"
                                android:textColor="@color/mom_color4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:text="@string/member_title1"
                                android:textSize="14sp"
                                android:textColor="@color/mom_color4"
                                android:layout_width="120dp"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:id="@+id/missionpasscount"
                                android:text="20"
                                android:textSize="14sp"
                                android:textColor="@color/mom_color4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:text="@string/member_title2"
                                android:textSize="14sp"
                                android:textColor="@color/mom_color4"
                                android:layout_width="120dp"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:id="@+id/feedbackcount"
                                android:text="31"
                                android:textSize="14sp"
                                android:textColor="@color/mom_color4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
            <View
                android:background="@drawable/xml_list_divider"
                android:layout_width="match_parent"
                android:layout_height="8dp"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>