<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/scrollView"
    >



    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:background="@color/mom_color2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/mypage_back_image"
                android:src="@drawable/mybackgrounddefalut"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                />

            <ImageButton
                android:id="@+id/backImageCamera"
                android:layout_gravity="bottom"
                android:layout_marginLeft="-60dp"
                android:src="@drawable/camera"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginBottom="10dp"
                android:background="#00ff"
                />

        </LinearLayout>

        <ImageView
            android:id="@+id/mypage_image_user_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:adjustViewBounds="true"
            android:layout_gravity="center"
            android:src="@drawable/userimg"
            android:maxWidth="100dp"
            android:maxHeight="100dp"
            android:layout_marginTop="-50dp"
            />

        <ImageView
            android:src="@drawable/ic_levelmark"
            android:layout_marginTop="-40dp"
            android:layout_marginLeft="35dp"
            android:layout_width="30dp"
            android:layout_height="40dp" />

        <TextView
            android:id="@+id/tx_level"
            android:text="20"
            android:textStyle="bold"
            android:textSize="10sp"
            android:layout_marginTop="-27dp"
            android:layout_marginLeft="35dp"
            android:textColor="@color/color6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/mypage_user_name"
            android:text="이름"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/color6"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            />




        <LinearLayout
            android:id="@+id/mybtnLyout"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:visibility="visible"
            >

            <Button
                android:id="@+id/add_friend"
                android:text="@string/friend_req_text"
                android:textSize="10sp"
                style="@style/btnStylePaprika"
                android:layout_width="150dp"
                android:layout_height="40dp" />

            <Button
                android:id="@+id/add_follwing"
                android:layout_marginLeft="20dp"
                android:text="팔로잉"
                android:textSize="10sp"
                style="@style/btnStylePaprika"
                android:layout_width="150dp"
                android:layout_height="40dp"
                 />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/mom_color1"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:gravity="center_horizontal"
            >

            <TextView
                android:id="@+id/tx_follower"
                android:textColor="@color/color6"
                android:text="팔로잉     |     팔러워"
                android:textSize="13sp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/xml_boder"
                android:onClick="followClick"
                />

        </LinearLayout>

<!--        <View
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/line_color1" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >



        </LinearLayout>

        <View
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/line_color1" />-->

        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            >

            <ImageView
                android:src="@drawable/main_page_lifting"
                android:layout_width="90dp"
                android:layout_height="90dp"
                />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                >

                <TextView
                    android:textStyle="bold"
                    android:textSize="10sp"
                    android:textColor="@color/color6"
                    android:text="@string/lifting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    />

                <TextView
                    android:id="@+id/mypage_lifting_level"
                    android:textSize="10sp"
                    android:textColor="@color/color6"
                    android:gravity="center"
                    android:text="Lv.0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/mypage_lifting_score"
                    android:textSize="10sp"
                    android:textColor="@color/color6"
                    android:text="0"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <ImageView
                android:src="@drawable/main_page_around"
                android:layout_width="90dp"
                android:layout_height="90dp"
                />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="5dp"
                >
                <TextView
                    android:textSize="10sp"
                    android:textColor="@color/color6"
                    android:text="@string/around"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    />

                <TextView
                    android:id="@+id/mypage_around_level"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:textColor="@color/color6"
                    android:text="Lv.0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/mypage_around_score"
                    android:textSize="10sp"
                    android:textColor="@color/color6"
                    android:text="0"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            >

            <ImageView
                android:src="@drawable/main_page_traping"
                android:layout_width="90dp"
                android:layout_height="90dp"
                />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                >

                <TextView
                    android:textSize="10sp"
                    android:textColor="@color/color6"
                    android:text="@string/trapping"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/mypage_trapping_level"
                    android:textSize="10sp"
                    android:textColor="@color/color6"
                    android:text="Lv.0"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/mypage_trapping_socre"
                    android:textSize="10sp"
                    android:textColor="@color/color6"
                    android:text="0" android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <ImageView
                android:src="@drawable/main_page_flib"
                android:layout_width="90dp"
                android:layout_height="90dp"
                />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="5dp"
                >
                <TextView
                    android:textStyle="bold"
                    android:textSize="10sp"
                    android:textColor="@color/color6"
                    android:text="@string/flick" android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/mypage_flib_level"
                    android:textSize="10sp"
                    android:textColor="@color/color6"
                    android:text="Lv.0" android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/mypage_flib_score"
                    android:textSize="10sp"
                    android:textColor="@color/color6"
                    android:text="0"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            >

            <ImageView
                android:src="@drawable/main_page_drible"
                android:layout_width="90dp"
                android:layout_height="90dp"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                >

                <TextView
                    android:textSize="10sp"
                    android:textColor="@color/color6"
                    android:text="@string/drrible" android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/mypage_drible_level"
                    android:textSize="10sp"
                    android:textColor="@color/color6"
                    android:text="Lv.0" android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/mypage_drible_score"
                    android:textSize="10sp"
                    android:textColor="@color/color6"
                    android:text="0" android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <ImageView
                android:src="@drawable/main_page_cross"
                android:layout_width="90dp"
                android:layout_height="90dp"
                />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="5dp"
                >
                <TextView
                    android:textSize="10sp"
                    android:textColor="@color/color6"
                    android:text="@string/crossbar" android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/mypage_crosba_level"
                    android:textSize="10sp"
                    android:textColor="@color/color6"
                    android:text="Lv.0" android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/mypage_crosba_score"
                    android:textSize="10sp"
                    android:textColor="@color/color6"
                    android:text="0" android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/line_color1" />

        <LinearLayout
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            >

            <ImageView
                android:background="@color/mom_color1"
                android:layout_gravity="center"
                android:src="@drawable/ic_video_library_white_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginLeft="5dp"
                android:id="@+id/text_title"
                android:text="@string/app_myvideo_view"
                android:textColor="@color/color6"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

        </LinearLayout>

        <View
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/line_color1" />

        <com.mom.soccer.common.ExpandableHeightGridView
            android:layout_marginTop="5dp"
            android:id="@+id/mypage_gridview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:numColumns="3"
            android:gravity="center"
            android:horizontalSpacing="2dp"
            android:isScrollContainer="false"
            android:stretchMode="columnWidth"
            android:verticalSpacing="2dp"
            >
        </com.mom.soccer.common.ExpandableHeightGridView>

        <TextView
            android:id="@+id/mypage_no_data_found"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:textColor="@color/color6"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:layout_marginBottom="10dp"
            />

    </LinearLayout>

</ScrollView>
