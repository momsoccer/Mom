<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/scrollView"
    >

    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:background="@color/mom_color2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        >


        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/mypage_back_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            />

        <ImageView
            android:id="@+id/mypage_image_user_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:adjustViewBounds="true"
            android:src="@drawable/userimg"
            android:layout_gravity="center"
            android:maxWidth="100dp"
            android:maxHeight="100dp"
            android:layout_marginTop="-50dp"
            />

        <TextView
            android:id="@+id/mypage_user_name"
            android:text="이름"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/color6"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            >

            <TextView
                android:text="지정코치 : "
                android:textSize="16sp"
                android:textColor="@color/color2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/mypage_coachname"
                android:text="강사명"
                android:textSize="16sp"
                android:textColor="@color/color2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <TextView
                android:layout_marginLeft="30dp"
                android:text="팀 : "
                android:textSize="16sp"
                android:textColor="@color/color2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/mypage_teamname"
                android:text="팀명(서울FC)"
                android:textSize="16sp"
                android:textColor="@color/color2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp"
            android:gravity="center"
            >

            <TextView
                android:text="전체랭킹 : "
                android:textSize="16sp"
                android:textColor="@color/color2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/mypage_total_ranking"
                android:text="6,400"
                android:textSize="16sp"
                android:textColor="@color/color2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/mypage_total_count"
                android:text="/53,000"
                android:textSize="16sp"
                android:textColor="@color/color2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp"
            android:gravity="center"
            >

            <TextView
                android:text="친구랭킹 : "
                android:textSize="16sp"
                android:textColor="@color/color2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/mypage_friend_ranking"
                android:text="200"
                android:textSize="16sp"
                android:textColor="@color/color2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/mypage_friend_count"
                android:text="/230"
                android:textSize="16sp"
                android:textColor="@color/color2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            >

            <TextView
                android:text="팀내랭킹 : "
                android:textSize="16sp"
                android:textColor="@color/color2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/mypage_team_ranking"
                android:text="200"
                android:textSize="16sp"
                android:textColor="@color/color2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/mypage_team_count"
                android:text="/54"
                android:textSize="16sp"
                android:textColor="@color/color2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/mom_color1"
            android:layout_marginBottom="5dp"
            android:gravity="center_horizontal"
            >

            <Button
                android:text="팔로워(150)"
                android:textSize="12sp"
                android:id="@+id/btnfollow"
                android:layout_width="130dp"
                android:layout_height="40dp"
                style="@style/btnStyleBlack"
                android:onClick="followClick"
                />

            <Button
                android:layout_marginLeft="10dp"
                android:text="팔로잉(200)"
                android:textSize="12sp"
                android:id="@+id/btnfollowing"
                android:layout_width="130dp"
                android:layout_height="40dp"
                style="@style/btnStyleBlack"
                android:onClick="followClick"
                />
        </LinearLayout>



        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            >

            <ImageView
                android:src="@drawable/main_page_lifting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                >

                <TextView
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="@color/color6"
                    android:text="@string/lifting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/mypage_lifting_level"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="@color/color6"
                    android:text="Lv 3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/mypage_lifting_score"
                    android:textSize="12sp"
                    android:textColor="@color/color6"
                    android:text="누적점수:506"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <ImageView
                android:src="@drawable/main_page_around"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                >
                <TextView
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="@color/color6"
                    android:text="@string/around"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/mypage_around_level"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="@color/color6"
                    android:text="Lv 4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/mypage_around_score"
                    android:textSize="12sp"
                    android:textColor="@color/color6"
                    android:text="누적점수:000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            >

            <ImageView
                android:src="@drawable/main_page_traping"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                >

                <TextView
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/color6"
                    android:text="@string/trapping"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/mypage_trapping_level"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/color6"
                    android:text="Lv 3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/mypage_trapping_socre"
                    android:textSize="12sp"
                    android:textColor="@color/color6"
                    android:text="누적점수:506"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <ImageView
                android:src="@drawable/main_page_flib"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                >
                <TextView
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/color6"
                    android:text="@string/flick"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/mypage_flib_level"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/color6"
                    android:text="Lv 4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/mypage_flib_score"
                    android:textSize="12sp"
                    android:textColor="@color/color6"
                    android:text="누적점수:000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            >

            <ImageView
                android:src="@drawable/main_page_drible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                >

                <TextView
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="@color/color6"
                    android:text="@string/drrible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/mypage_drible_level"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="@color/color6"
                    android:text="Lv 3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/mypage_drible_score"
                    android:textSize="12sp"
                    android:textColor="@color/color6"
                    android:text="누적점수:506"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <ImageView
                android:src="@drawable/main_page_cross"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                >
                <TextView
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="@color/color6"
                    android:text="@string/crossbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/mypage_crosba_level"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="@color/color6"
                    android:text="Lv 4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/mypage_crosba_score"
                    android:textSize="12sp"
                    android:textColor="@color/color6"
                    android:text="누적점수:000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/line_color1" />

        <TextView
            android:text="@string/app_myvideo_view"
            android:layout_marginTop="20dp"
            android:textColor="@color/color6"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <com.mom.soccer.common.ExpandableHeightGridView
            android:layout_marginTop="5dp"
            android:id="@+id/mypage_gridview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:numColumns="3"
            android:gravity="center"
            android:horizontalSpacing="2dp"
            android:isScrollContainer="false"
            android:stretchMode="columnWidth"
            android:verticalSpacing="2dp"
            >
        </com.mom.soccer.common.ExpandableHeightGridView>

        <TextView
            android:id="@+id/mypage_no_data_found"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:textColor="@color/color6"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:layout_marginBottom="10dp"
            />

    </LinearLayout>

</ScrollView>
