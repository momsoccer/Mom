<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mom_color1"
    tools:context="com.mom.soccer.ball.PlayerMainActivity">

    <android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbar"
        app:titleTextColor="@color/color6"
        android:background="@color/mom_color1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:id="@+id/main_image"
            android:src="@drawable/mom_hd_mk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            />

        <TextView
            android:text="XXX"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/color6"
            android:id="@+id/textWrite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="center"
            android:layout_marginRight="10dp"
            />

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.astuetz.PagerSlidingTabStrip
            android:id="@+id/player_follow_tabs"
            app:pstsShouldExpand="true"
            app:pstsTextAllCaps="true"
            app:pstsDividerColor="@color/enabled_red"
            app:pstsIndicatorHeight="1dp"
            app:pstsUnderlineHeight="1dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="10sp"
            app:pstsTabPaddingLeftRight="@dimen/com_facebook_share_button_padding_left"
            />

        <android.support.v4.view.ViewPager
            android:id="@+id/player_ollow_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </LinearLayout>

</LinearLayout>
