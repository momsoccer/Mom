<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/mom_color4"
    android:orientation="horizontal">

        <ImageView
            android:id="@+id/slidingimg"
            android:layout_gravity="left"
            android:src="@drawable/ic_vertical_align_top_white_24dp"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentStart="true" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            >

                <ImageView
                    android:id="@+id/line_image"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/card_rectangle"
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    />
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                        <ImageView
                            android:src="@drawable/ic_ball_subject"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />

                        <TextView
                            android:text="@string/ins_sliding_feed_header_title"
                            android:textSize="13sp"
                            android:textColor="@color/color6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_marginLeft="15dp"
                            android:text="@string/ins_sliding_title"
                            android:textSize="13sp"
                            android:textColor="@color/color6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/feedbackCount"
                            android:text="120"
                            android:textSize="13sp"
                            android:textColor="@color/enabled_red"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_marginLeft="10dp"
                            android:text="@string/ins_sliding_non_title"
                            android:textSize="13sp"
                            android:textColor="@color/color6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/feedbackNonCount"
                            android:text="10"
                            android:textSize="13sp"
                            android:textColor="@color/enabled_red"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                </LinearLayout>


        </LinearLayout>



</LinearLayout>