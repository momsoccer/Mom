<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mom_color1"
    >
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardview"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="5dp"
        android:orientation="vertical"
        card_view:contentPadding="5dp"
        card_view:cardBackgroundColor="@color/mom_color3"
        >

        <LinearLayout
            android:layout_margin="1dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                >

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    >
                    <ImageView
                        android:id="@+id/userimg"
                        android:src="@drawable/userimg"
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        />
                    <TextView
                        android:id="@+id/level"
                        android:text="0"
                        android:textStyle="bold"
                        android:textColor="@color/color6"
                        android:gravity="center"
                        android:background="@drawable/ic_levelmark"
                        android:textSize="8sp"
                        android:layout_width="18dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="-17dp"
                        android:layout_marginLeft="20dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginLeft="2dp"
                    android:orientation="vertical"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    >

                    <TextView
                        android:text="안유라"
                        android:id="@+id/username"
                        android:textColor="@color/color6"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="@string/ins_team_msg2"
                            android:textColor="@color/color6"
                            android:textSize="6sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:text="250"
                            android:id="@+id/totalscore"
                            android:textColor="@color/color6"
                            android:textSize="6sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="@string/ins_team_msg3"
                            android:textColor="@color/color6"
                            android:textSize="6sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:text="2015년10월11일 오후25시"
                            android:id="@+id/date"
                            android:textColor="@color/color6"
                            android:textSize="6sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="3dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/li_btn"
                >
                <Button
                    android:id="@+id/teamApplyBtn"
                    android:gravity="center"
                    android:text="@string/ins_team_msg1"
                    android:textSize="8sp"
                    style="@style/btnStylePaprika"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="20dp" />

                <Button
                    android:layout_marginLeft="5dp"
                    android:id="@+id/teamCanBtn"
                    android:gravity="center"
                    android:text="@string/ins_team_msg4"
                    android:textSize="8sp"
                    style="@style/btnStylePaprika"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="20dp" />

            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>