<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingRight="5px">

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:background="@color/color2"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <LinearLayout
        android:id="@+id/layoutDots"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:orientation="horizontal">
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            >

            <ImageButton
                android:id="@+id/main_btn_drible"
                android:layout_margin="1dp"
                android:background="@drawable/main_page_drible"
                android:layout_width="105dp"
                android:layout_height="110dp"
                android:scaleType="fitCenter"
                android:onClick="OnClickMission"/>

            <ImageButton
                android:layout_margin="1dp"
                android:id="@+id/main_btn_trapping"
                android:background="@drawable/main_page_traping"
                android:layout_width="105dp"
                android:layout_height="110dp"
                android:scaleType="fitCenter"
                android:onClick="OnClickMission"/>

            <ImageButton
                android:layout_margin="1dp"
                android:id="@+id/main_btn_lifting"
                android:background="@drawable/main_page_lifting"
                android:layout_width="105dp"
                android:layout_height="110dp"
                android:scaleType="fitCenter"
                android:onClick="OnClickMission"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            >

            <ImageButton
                android:layout_margin="1dp"
                android:id="@+id/main_btn_around"
                android:background="@drawable/main_page_around"
                android:layout_width="105dp"
                android:layout_height="110dp"
                android:scaleType="fitCenter"
                android:onClick="OnClickMission"
                />

            <ImageButton
                android:layout_margin="1dp"
                android:id="@+id/main_btn_flick"
                android:background="@drawable/main_page_flib"
                android:layout_width="105dp"
                android:layout_height="110dp"
                android:scaleType="fitCenter"
                android:onClick="OnClickMission"/>

            <ImageButton
                android:layout_margin="1dp"
                android:id="@+id/main_btn_crosbar"
                android:background="@drawable/main_page_cross"
                android:layout_width="105dp"
                android:layout_height="110dp"
                android:scaleType="fitCenter"
                android:onClick="OnClickMission" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>