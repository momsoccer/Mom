<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/mom_color3"
    android:gravity="center"
    android:layout_marginTop="10dp"
    >

    <ImageView
        android:layout_marginTop="5dp"
        android:id="@+id/search_item_userimg"
        android:src="@drawable/userimg"
        android:layout_width="130dp"
        android:layout_height="90dp" />


    <View
        android:id="@+id/mission_line"
        android:layout_marginTop="3dp"
        android:layout_width="50dp"
        android:layout_height="2dp"
        android:background="@color/enabled_red" />

    <TextView
        android:id="@+id/search_item_username"
        android:layout_marginTop="5dp"
        android:textSize="10sp"
        android:text="@string/search_user_field"
        android:maxLines="1"
        android:maxLength="10"
        android:textColor="@color/color6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/search_item_teamname"
        android:layout_marginTop="5dp"
        android:textSize="8sp"
        android:text="@string/search_team"
        android:maxLines="1"
        android:maxLength="10"
        android:textColor="@color/line_color1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/search_item_btn_choose"
        android:layout_marginTop="5dp"
        style="@style/btnStylePaprika"
        android:text="@string/search_choose"
        android:textSize="10dp"
        android:layout_width="65dp"
        android:layout_height="35dp"
        android:layout_marginBottom="10dp"
        />

</LinearLayout>