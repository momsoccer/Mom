<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/mom_color3"
    android:gravity="center"
    android:layout_marginTop="10dp"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:orientation="vertical"
        card_view:cardElevation="3dp"
        card_view:cardBackgroundColor="@color/mom_color3">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/mom_color3"
            android:gravity="center"
            >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_marginTop="5dp"
                    android:id="@+id/search_item_userimg"
                    android:src="@drawable/userimg"
                    android:layout_width="165dp"
                    android:layout_height="120dp" />

                <TextView
                    android:id="@+id/level"
                    android:layout_marginLeft="120dp"
                    android:layout_marginTop="-52dp"
                    android:textStyle="bold"
                    android:textColor="@color/color6"
                    android:gravity="center"
                    android:background="@drawable/ic_levelmark"
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <View
                android:id="@+id/mission_line"
                android:layout_marginTop="3dp"
                android:layout_width="100dp"
                android:layout_height="2dp"
                android:background="@color/enabled_red" />

            <TextView
                android:id="@+id/search_item_name"
                android:layout_marginTop="5dp"
                android:textSize="15sp"
                android:text="@string/search_user_field"
                android:maxLines="1"
                android:maxLength="10"
                android:textColor="@color/color6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/search_item_teamname"
                android:layout_marginTop="5dp"
                android:textSize="12sp"
                android:text="@string/search_team"
                android:maxLines="1"
                android:maxLength="10"
                android:textColor="@color/color6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>