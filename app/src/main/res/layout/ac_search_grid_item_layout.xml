<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/mom_color3"
    android:gravity="center"
    android:layout_marginTop="10dp"
    android:id="@+id/cardview"
    >

    <ImageView
        android:layout_marginTop="5dp"
        android:id="@+id/search_item_userimg"
        android:src="@drawable/userimg"
        android:layout_width="165dp"
        android:layout_height="120dp" />


    <View
        android:id="@+id/mission_line"
        android:layout_marginTop="3dp"
        android:layout_width="100dp"
        android:layout_height="2dp"
        android:background="@color/enabled_red" />

    <TextView
        android:id="@+id/search_item_username"
        android:layout_marginTop="5dp"
        android:textSize="15sp"
        android:text="@string/search_user_field"
        android:maxLines="1"
        android:maxLength="10"
        android:textColor="@color/color6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/search_item_teamname"
        android:layout_marginTop="5dp"
        android:textSize="12sp"
        android:text="@string/search_team"
        android:maxLines="1"
        android:maxLength="10"
        android:textColor="@color/line_color1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        />
</LinearLayout>