<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/mom_color1"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:orientation="vertical"
        card_view:cardElevation="3dp"
        card_view:cardBackgroundColor="@color/color8"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/xml_card_board"
            >

            <View
                android:id="@+id/viewType"
                android:background="@color/color2"
                android:layout_width="match_parent"
                android:layout_height="5dp"/>

            <ImageView
                android:layout_margin="10dp"
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="200dp" />

            <LinearLayout
                android:id="@+id/liContent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/subject"
                    android:text="subject"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="@color/bg_screen3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="상태"
                        android:textSize="15sp"
                        android:textColor="@color/bg_screen3"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        />

                    <TextView
                        android:id="@+id/status"
                        android:text="apply"
                        android:textSize="15sp"
                        android:textColor="@color/toast_back_color"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="주제"
                        android:textSize="15sp"
                        android:textColor="@color/bg_screen3"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        />

                    <TextView
                        android:id="@+id/appdisp"
                        android:text="description"
                        android:textSize="15sp"
                        android:textColor="@color/toast_back_color"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="시간"
                        android:textSize="15sp"
                        android:textColor="@color/bg_screen3"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        />

                    <TextView
                        android:id="@+id/time"
                        android:text="time"
                        android:textSize="15sp"
                        android:textColor="@color/toast_back_color"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="신청인원"
                        android:textSize="15sp"
                        android:textColor="@color/bg_screen3"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        />

                    <TextView
                        android:id="@+id/reqcount"
                        android:text="reqcount"
                        android:textSize="15sp"
                        android:textColor="@color/toast_back_color"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_margin="5dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/applyBtn"
                    android:text="신청및 정보확인"
                    style="@style/btnStylePaprika"
                    android:textSize="17sp"
                    android:layout_width="match_parent"
                    android:layout_height="35dp" />

                <Button
                    android:layout_marginTop="5dp"
                    android:id="@+id/shreBtn"
                    android:text="친구에게 공유하기"
                    style="@style/btnStyleWhite"
                    android:textSize="17sp"
                    android:layout_width="match_parent"
                    android:layout_height="35dp" />

            </LinearLayout>

            <View
                android:background="@color/color2"
                android:layout_width="match_parent"
                android:layout_height="5dp"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>