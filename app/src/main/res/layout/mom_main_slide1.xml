<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mom_color1"
    >

    <LinearLayout
        android:id="@+id/li_slide_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/ranking"
        android:gravity="center"
        >

        <LinearLayout
            android:id="@+id/li_main_slid_ranking"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            >

            <android.support.v7.widget.RecyclerView
                android:id="@+id/totalRecyclerView"
                android:layout_gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="@color/mom_color1"
                />

            <Button
                android:id="@+id/btn_more_total_ranking"
                style="@style/btnStylePaprika"
                android:text="@string/moreview"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                />
        </LinearLayout>

    </LinearLayout>



</RelativeLayout>