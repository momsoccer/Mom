<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mom_color2"
    tools:ignore="MissingPrefix">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginBottom="5dp"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/main_mission_rlayout"
                android:background="@drawable/drible_back"
                android:layout_width="match_parent"
                android:layout_height="520dp">

                <ImageButton
                    android:id="@+id/main_mission_start"
                    android:layout_marginTop="50dp"
                    android:layout_marginRight="30dp"
                    android:background="@color/mom_color1"
                    android:layout_alignEnd="@+id/tx_main_mission_name"
                    android:src="@drawable/star_enabled"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />

                <TextView
                    android:id="@+id/tx_main_mission_level"
                    android:layout_marginTop="12dp"
                    android:gravity="center"
                    android:text="Lv.0"
                    android:textColor="@color/color6"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

                <TextView
                    android:id="@+id/tx_main_mission_name"
                    android:gravity="center"
                    android:text="@string/default_mission_name"
                    android:textColor="@color/color6"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginTop="75dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <com.google.android.youtube.player.YouTubePlayerView
                    android:id="@+id/youtube_view"
                    android:gravity="center"
                    android:layout_margin="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="230dp"
                    android:layout_below="@+id/tx_main_mission_name"
                    android:layout_centerHorizontal="true"
                    android:onClick="youtubeOnclick"
                    />

                <TextView
                    android:id="@+id/tx_main_mission_disp"
                    android:layout_below="@id/youtube_view"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:text="@string/default_mission_disp"
                    android:textColor="@color/color6"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tx_main_mission_precon"
                    android:layout_below="@id/tx_main_mission_disp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:text="@string/default_mission_precon"
                    android:textColor="@color/color2"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tx_main_mission_potin"
                    android:layout_below="@id/tx_main_mission_precon"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:text="@string/default_mission_getpoint"
                    android:textColor="@color/color6"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/li_mymittion"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                >

                <ImageView
                    android:id="@+id/img_missiontab"
                    android:background="@drawable/missiontab"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:visibility="gone"
                    />

                <View
                    android:id="@+id/view_l1"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@color/line_color1" />

                <TextView
                    android:id="@+id/tx_main_usermission"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:text="@string/my_mission_subject"
                    android:textColor="@color/color6"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <View
                    android:id="@+id/view_l2"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@color/line_color1" />

                <com.google.android.youtube.player.YouTubeThumbnailView
                    android:id="@+id/youtybe_Thumbnail"
                    android:layout_margin="5dp"
                    android:layout_width="300dp"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:background="@android:color/black"
                    android:layout_gravity="center"
                    />

                <LinearLayout
                    android:layout_alignBottom="@+id/grid_youtybe_Thumbnail"
                    android:layout_marginLeft="45dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/linearLayout">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/usermission_iv_hart"
                            android:src="@drawable/ic_white_hart"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/usermission_tx_hart"
                            android:text="0"
                            android:layout_marginLeft="5dp"
                            android:textSize="16sp"
                            android:textColor="@color/color6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        >

                        <ImageView
                            android:id="@+id/usermission_iv_comment"
                            android:src="@drawable/coment_ic"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/usermission_tx_comment"
                            android:text="0"
                            android:layout_marginLeft="5dp"
                            android:textSize="16sp"
                            android:textColor="@color/color6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <ImageButton
                            android:id="@+id/ic_tree"
                            android:layout_marginLeft="150dp"
                            android:src="@drawable/ic_three"
                            android:background="@color/mom_color1"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@color/line_color1" />

            <TextView
                android:id="@+id/tx_main_mission_subject"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:text="@string/default_mission_subject"
                android:textColor="@color/color6"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <View
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@color/line_color1" />

            <com.mom.soccer.common.ExpandableHeightGridView
                android:id="@+id/main_mission_gridview"
                android:layout_marginTop="10dp"
                android:numColumns="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:horizontalSpacing="2dp"
                android:isScrollContainer="false"
                android:stretchMode="columnWidth"
                android:verticalSpacing="20dp"
                >
            </com.mom.soccer.common.ExpandableHeightGridView>

        </LinearLayout>


    </ScrollView>

    <Button
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:id="@+id/btn_mission_upload"
        style="@style/btnStylePaprika"
        android:text="@string/mission_upload"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="40dp" />

</LinearLayout>
