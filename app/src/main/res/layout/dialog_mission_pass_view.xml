<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        >

        <ImageView
            android:layout_marginLeft="5dp"
            android:src="@drawable/ic_basic_mony"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/text_mypoint"
            android:layout_marginLeft="5dp"
            android:text="5000P"
            android:textColor="@color/color6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textStyle="bold"
            />

    </LinearLayout>


    <RadioGroup
        android:id="@+id/RadioGroup"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <android.support.v7.widget.AppCompatRadioButton
            android:text="합격"
            android:textColor="@color/color6"
            android:id="@+id/pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:theme="@style/CustomStyledRadioButton"
            />

        <android.support.v7.widget.AppCompatRadioButton
            android:text="불합격"
            android:textColor="@color/color6"
            android:id="@+id/nopass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/CustomStyledRadioButton"
            />
    </RadioGroup>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/layout_ins_comment"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/TextLabelinput"
            >

            <EditText
                android:id="@+id/ins_comment"
                android:textSize="12sp"
                android:textColor="@color/color6"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:lines="3"
                android:gravity="top"
                android:hint="강사분의 코멘트"
                android:background="@drawable/inputtext"
                android:inputType="textMultiLine"
                />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/layout_f_reason"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/TextLabelinput"
            >

            <EditText
                android:layout_marginTop="10dp"
                android:id="@+id/f_reason"
                android:textSize="12sp"
                android:textColor="@color/color6"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:lines="3"
                android:gravity="top"
                android:hint="불합격사유"
                android:inputType="textMultiLine"
                android:background="@drawable/inputtext"
                />

        </android.support.design.widget.TextInputLayout>

    </LinearLayout>
</LinearLayout>