<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:fillViewport="true"
    android:background="@color/mission_color_lifting"
    xmlns:android="http://schemas.android.com/apk/res/android">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recipe_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >



        <LinearLayout android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <ImageView
                        android:id="@+id/ac_user_mission_image"
                        android:src="@drawable/userimg"
                        android:layout_gravity="center"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerVertical="true"
                        />

                    <TextView
                        android:id="@+id/level"
                        android:text="12"
                        android:textStyle="bold"
                        android:textColor="@color/color6"
                        android:textSize="8sp"
                        android:src="@drawable/ic_levelmark"
                        android:layout_width="20dp"
                        android:layout_height="22dp"
                        android:background="@drawable/ic_levelmark"
                        android:gravity="center"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="29dp"
                        />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="60dp"
                        android:layout_centerVertical="true"
                        >

                        <TextView
                            android:id="@+id/ac_user_mission_name"
                            android:text="이름"
                            android:textColor="@color/color6"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/ac_user_mission_team"
                            android:text="소속 팀"
                            android:textColor="@color/color6"
                            android:textSize="12sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:maxLines="1"
                            android:maxLength="15"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="120dp"
                        >
                        <TextView
                            android:id="@+id/tx_score"
                            android:text="@string/user_mission_detail_tx3"
                            android:textColor="@color/color6"
                            android:textSize="10sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />

                        <TextView
                            android:id="@+id/tx_date"
                            android:text="2014년12월 11일"
                            android:textColor="@color/color6"
                            android:textSize="8sp"
                            android:layout_marginTop="5dp"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            />

                    </LinearLayout>
                    <Button
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:id="@+id/btn_fllow"
                        android:layout_marginLeft="50dp"
                        style="@style/btnStylePaprika"
                        android:text="@string/app_fllow"
                        android:layout_width="100dp"
                        android:layout_height="35dp"
                        android:visibility="visible"
                        android:textSize="10dp"
                        />
                </RelativeLayout>
            </LinearLayout>

            <com.google.android.youtube.player.YouTubeThumbnailView
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                />

            <LinearLayout
                android:layout_marginTop="1dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:layout_centerVertical="true"
                        android:id="@+id/ac_user_mission_video_pickup"
                        android:src="@drawable/ic_white_hart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/mom_color1"
                        />

                    <TextView
                        android:layout_centerVertical="true"
                        android:id="@+id/ac_user_mission_video_pickcount"
                        android:layout_marginLeft="25dp"
                        android:text="0"
                        android:textColor="@color/color6"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ImageButton
                        android:layout_centerVertical="true"
                        android:id="@+id/ac_user_mission_video_comment"
                        android:src="@drawable/coment_ic"
                        android:layout_marginLeft="50dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/mom_color1"
                        />

                    <TextView
                        android:layout_centerVertical="true"
                        android:id="@+id/ac_user_mission_video_commentcount"
                        android:layout_marginLeft="75dp"
                        android:text="0"
                        android:textColor="@color/color6"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ImageButton
                        android:id="@+id/shrareBtn"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="250dp"
                        android:src="@drawable/ic_screen_share_white_24dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/mom_color1"
                        />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.astuetz.PagerSlidingTabStrip
                    android:id="@+id/pagertabs"
                    app:pstsShouldExpand="true"
                    app:pstsTextAllCaps="true"
                    app:pstsDividerColor="@color/enabled_red"
                    app:pstsIndicatorHeight="1dp"
                    app:pstsUnderlineHeight="1dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    />

                <android.support.v4.view.ViewPager
                    android:id="@+id/viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>
        </LinearLayout>
</LinearLayout>
    </ScrollView>


