<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="40dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/mom_color4"
    android:orientation="horizontal">

        <ImageView
            android:layout_alignParentLeft="true"
            android:id="@+id/slidingimg"
            android:layout_gravity="left"
            android:src="@drawable/ic_vertical_align_top_white_24dp"
            android:layout_width="45dp"
            android:layout_height="45dp"
            />

        <LinearLayout
            android:layout_marginLeft="45dp"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            >

                <ImageView
                    android:id="@+id/line_image"
                    android:background="@drawable/card_rectangle"
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left|center"
                    >

                        <ImageView
                            android:src="@drawable/ic_ball_subject"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />

                        <TextView
                            android:text="내 미션"
                            android:textSize="13sp"
                            android:textColor="@color/color6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_marginLeft="15dp"
                            android:text="@string/usermain_misison_title7"
                            android:textSize="13sp"
                            android:textColor="@color/color6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/usermissioncount"
                            android:text="0"
                            android:textSize="13sp"
                            android:textColor="@color/enabled_red"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_marginLeft="10dp"
                            android:text="@string/usermain_misison_title6"
                            android:textSize="13sp"
                            android:textColor="@color/color6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/usermissionnocount"
                            android:text="0"
                            android:textSize="13sp"
                            android:textColor="@color/enabled_red"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                </LinearLayout>

        </LinearLayout>

</RelativeLayout>