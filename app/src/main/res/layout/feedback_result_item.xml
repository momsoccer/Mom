<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/mom_color1"
    >


    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:orientation="vertical"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="5dp"
        card_view:contentPadding="5dp"
        card_view:cardBackgroundColor="@color/mom_color3"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:gravity="center"
                >

                <TextView
                    android:id="@+id/date"
                    android:text="요청일시"
                    android:textSize="6sp"
                    android:textColor="@color/color6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

                <TextView
                    android:layout_marginLeft="10dp"
                    android:id="@+id/toname"
                    android:text="To ...name"
                    android:textSize="6sp"
                    android:textColor="@color/color6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginLeft="10dp"
                    android:id="@+id/missionname"
                    android:text="미션명"
                    android:textSize="6sp"
                    android:textColor="@color/color6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RatingBar
                    android:id="@+id/eval_ratingbar"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:rating="0.5"
                    android:isIndicator="true"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <View
                    android:id="@+id/view_top"
                    android:background="@drawable/card_rectangle_white"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                >

                <ImageView
                    android:id="@+id/image_second"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/card_rectangle_white"
                    android:layout_width="5dp"
                    android:layout_height="45dp"
                    />


                <LinearLayout
                    android:layout_marginLeft="5dp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    >

                    <ImageView
                        android:id="@+id/userimg"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/userimg"
                        android:layout_width="35dp"
                        android:layout_height="35dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginLeft="3dp"
                    android:orientation="vertical"
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    >

                    <TextView
                        android:id="@+id/type"
                        android:text="구분"
                        android:textSize="6sp"
                        android:textColor="@color/color6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/name"
                        android:text="이름"
                        android:textSize="6sp"
                        android:textColor="@color/color6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/teamname"
                        android:text="팀명"
                        android:textSize="6sp"
                        android:textColor="@color/color6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:id="@+id/li_score"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="@string/ins_team_msg2"
                            android:textSize="6sp"
                            android:textColor="@color/color6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/totalscore"
                            android:text="190"
                            android:textSize="6sp"
                            android:textColor="@color/color6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="3dp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    >
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:src="@drawable/ic_ball_subject"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />

                        <TextView
                            android:textSize="6sp"
                            android:textColor="@color/color6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/feedback_content_type"
                            />

                    </LinearLayout>


                    <TextView
                        android:layout_marginTop="2dp"
                        android:id="@+id/content"
                        android:textSize="6sp"
                        android:textColor="@color/color6"
                        android:layout_width="155dp"
                        android:layout_height="wrap_content"
                        android:text="문의내용"
                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/li_video"
                    android:layout_marginLeft="3dp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    >

                    <com.google.android.youtube.player.YouTubeThumbnailView
                        android:id="@+id/video_ThumbnailView"
                        android:layout_width="65dp"
                        android:layout_height="40dp"
                        android:background="@color/color8"
                        />

                    <ImageView
                        android:src="@drawable/video_play_btn_white"
                        android:layout_marginTop="-38dp"
                        android:layout_marginLeft="2dp"
                        android:layout_width="15dp"
                        android:layout_height="15dp" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>