<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/mom_color1"
    >


    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:orientation="vertical"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="5dp"
        card_view:contentPadding="5dp"
        card_view:cardBackgroundColor="@color/mom_color3"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/mom_color3"
            >

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/userimg"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/userimg"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center_vertical"
                    />

                <LinearLayout
                    android:layout_marginLeft="5dp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:id="@+id/subject"
                        android:layout_marginTop="5dp"
                        android:text="Request subject"
                        android:textSize="8dp"
                        android:maxLength="30"
                        android:textColor="@color/color6"
                        android:layout_width="180dp"
                        android:layout_height="13dp" />

                    <TextView
                        android:id="@+id/username"
                        android:layout_marginTop="3dp"
                        android:text="Request userName"
                        android:textColor="@color/color6"
                        android:textSize="8dp"
                        android:layout_width="180dp"
                        android:maxLength="30"
                        android:layout_height="13dp" />

                    <TextView
                        android:id="@+id/teamname"
                        android:text="Request TeamName"
                        android:layout_marginTop="3dp"
                        android:textSize="8dp"
                        android:textColor="@color/color6"
                        android:layout_width="180dp"
                        android:layout_height="13dp"
                        android:maxLength="30"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginLeft="5dp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:id="@+id/date"
                        android:text="20150101"
                        android:layout_marginTop="5dp"
                        android:textSize="8sp"
                        android:textColor="@color/color6"
                        android:layout_width="100dp"
                        android:layout_height="13dp"
                        android:maxLength="30"
                        />

                    <TextView
                        android:id="@+id/reqtype"
                        android:text="video request"
                        android:layout_marginTop="3dp"
                        android:textSize="8dp"
                        android:textColor="@color/color6"
                        android:layout_width="100dp"
                        android:layout_height="13dp"
                        android:maxLength="30"
                        />

                    <TextView
                        android:id="@+id/point"
                        android:text="video request"
                        android:layout_marginTop="3dp"
                        android:textSize="8dp"
                        android:textColor="@color/color6"
                        android:layout_width="100dp"
                        android:layout_height="13dp"
                        android:maxLength="30"
                        />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="2dp"
                android:layout_marginLeft="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <com.google.android.youtube.player.YouTubeThumbnailView
                        android:id="@+id/user_video_ThumbnailView"
                        android:layout_marginTop="5dp"
                        android:layout_width="100dp"
                        android:layout_height="60dp"
                        android:background="@drawable/video_background"/>

                    <ImageView
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="-55dp"
                        android:src="@drawable/video_play_btn_white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:text="@string/ins_text_feed_q"
                        android:textColor="@color/color6"
                        android:textSize="8sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />

                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:id="@+id/content"
                        android:text="content"
                        android:textColor="@color/color6"
                        android:textSize="8sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="2dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.youtube.player.YouTubeThumbnailView
                    android:id="@+id/mission_video_ThumbnailView"
                    android:layout_marginTop="5dp"
                    android:layout_width="100dp"
                    android:layout_height="60dp"
                    android:background="@drawable/video_background"/>

                <Button
                    android:layout_gravity="center"
                    android:id="@+id/btnfeed"
                    android:layout_marginLeft="5dp"
                    android:text="피드백작성"
                    android:textSize="8dp"
                    style="@style/btnStylePaprika"
                    android:layout_width="match_parent"
                    android:layout_height="35sp" />

            </LinearLayout>

        </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>