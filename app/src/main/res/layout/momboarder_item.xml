<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/mom_color1"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:orientation="vertical"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="3dp"
        card_view:contentPadding="5dp"
        card_view:cardBackgroundColor="@color/color8"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/xml_card_board"
            >

            <View
                android:id="@+id/viewType"
                android:background="@drawable/xml_list_divider"
                android:layout_width="match_parent"
                android:layout_height="10dp"/>


            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/userimg"
                            android:layout_centerVertical="true"
                            android:src="@drawable/userimg"
                            android:layout_width="45dp"
                            android:layout_height="45dp" />

                        <TextView
                            android:id="@+id/level"
                            android:layout_marginTop="23dp"
                            android:layout_marginLeft="-20dp"
                            android:text="0"
                            android:textColor="@color/color6"
                            android:textSize="8sp"
                            android:textStyle="bold"
                            android:background="@drawable/ic_levelmark"
                            android:gravity="center"
                            android:layout_width="20dp"
                            android:layout_height="22dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginLeft="55dp"
                        android:layout_centerVertical="true"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/username"
                            android:text="김연태"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/mom_color4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/formatingdate"
                            android:text="10분전"
                            android:textSize="15sp"
                            android:textColor="@color/color2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <ImageButton
                        android:id="@+id/btnMenu"
                        android:src="@drawable/ic_more_vert_black_36dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/color6"
                        />

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/liContent"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="100dp">

                <TextView
                    android:id="@id/content"
                    android:text="안녕하세요 본문내용입니다\n안녕하세요 본문내용입니다 \n안녕하세요 본문내용입니다 \n안녕하세요 본문내용입니다 \n안녕하세요 본문내용입니다 \n"
                    android:textSize="15sp"
                    android:textColor="@color/mom_color4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="4"
                    android:maxLength="100"
                    />

                <TextView
                    android:id="@+id/txbtnview"
                    android:text="@string/momboard_more_view"
                    android:textSize="15sp"
                    android:textColor="@color/color8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/li_file_layout"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="center"
                android:background="@color/overcolor1"
                >

                <ImageView
                    android:layout_margin="2dp"
                    android:id="@+id/attachImage1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    />

                <ImageView
                    android:layout_margin="2dp"
                    android:id="@+id/attachImage2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_margin="2dp"
                    android:id="@+id/attachImage3"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <RelativeLayout
                android:orientation="horizontal"
                android:background="@color/color8"
                android:layout_width="match_parent"
                android:layout_height="30dp">

                <LinearLayout
                    android:layout_marginLeft="20dp"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textSize="12sp"
                        android:layout_gravity="center"
                        android:text="@string/user_mission_d_title2"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/commentCount"
                        android:layout_marginLeft="5dp"
                        android:textSize="12sp"
                        android:layout_gravity="center"
                        android:text="20"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/liWriteBtn"
                    android:layout_marginLeft="140dp"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:src="@drawable/ic_create_white_24dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/color10"
                        />

                    <TextView
                        android:layout_marginLeft="5dp"
                        android:textSize="12sp"
                        android:layout_gravity="center"
                        android:text="@string/board_write"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/liShareBtn"
                    android:layout_marginRight="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:src="@drawable/ic_share_white_24dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/color10"
                        />
                    <TextView
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center"
                        android:textSize="12sp"
                        android:text="@string/board_share"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>