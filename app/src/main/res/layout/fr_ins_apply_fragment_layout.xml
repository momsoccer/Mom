<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/mom_color1"
    >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/mom_color1"
        >

        <android.support.v7.widget.CardView
            android:id="@+id/ins_cardview"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            card_view:cardCornerRadius="5dp"
            card_view:cardElevation="5dp"
            android:orientation="vertical"
            card_view:cardBackgroundColor="@color/mom_color3"
            >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <View
                    android:id="@+id/viewType"
                    android:background="@color/color8"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center"
                    >

                    <ImageView
                        android:id="@+id/insimage"
                        android:src="@drawable/userimg"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_margin="10dp"
                        />

                    <ImageView
                        android:id="@+id/teamimage"
                        android:src="@drawable/team_flag"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_margin="10dp"
                        />

                </LinearLayout>

                <Button
                    android:layout_marginTop="5dp"
                    android:id="@+id/btnTeamRequest"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:textSize="13sp"
                    android:text="팀가입"
                    style="@style/btnStylePaprika"
                    android:layout_gravity="center"
                    />

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >

                        <LinearLayout
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="10dp"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            >

                            <ImageView
                                android:src="@drawable/ic_ball_subject"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent" />

                            <TextView
                                android:text="@string/ins_text_name"
                                android:textSize="12sp"
                                android:textColor="@color/color6"
                                android:layout_width="110dp"
                                android:layout_height="match_parent" />

                            <TextView
                                android:id="@+id/name"
                                android:layout_marginLeft="10dp"
                                android:textColor="@color/color6"
                                android:text="조관우"
                                android:textSize="12sp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="10dp"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            >
                            <ImageView
                                android:src="@drawable/ic_ball_subject"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent" />
                            <TextView
                                android:textColor="@color/color6"
                                android:text="@string/ins_text_teamname"
                                android:textSize="12sp"
                                android:layout_width="110dp"
                                android:layout_height="match_parent" />

                            <TextView
                                android:textColor="@color/color6"
                                android:id="@+id/teamname"
                                android:layout_marginLeft="10dp"
                                android:text="Team name"
                                android:textSize="12sp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="10dp"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            >
                            <ImageView
                                android:src="@drawable/ic_ball_subject"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent" />
                            <TextView
                                android:textColor="@color/color6"
                                android:text="@string/ins_text_teammember_count"
                                android:textSize="12sp"
                                android:layout_width="110dp"
                                android:layout_height="match_parent" />

                            <TextView
                                android:textColor="@color/color6"
                                android:id="@+id/teammembercount"
                                android:layout_marginLeft="10dp"
                                android:text="0"
                                android:textSize="12sp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="10dp"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            >
                            <ImageView
                                android:src="@drawable/ic_ball_subject"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent" />
                            <TextView
                                android:textColor="@color/color6"
                                android:text="@string/ins_text_feed_q"
                                android:textSize="12sp"
                                android:layout_width="110dp"
                                android:layout_height="match_parent" />

                            <TextView
                                android:textColor="@color/color6"
                                android:id="@+id/questioncount"
                                android:layout_marginLeft="10dp"
                                android:text="120"
                                android:textSize="12sp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="10dp"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            >
                            <ImageView
                                android:src="@drawable/ic_ball_subject"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent" />
                            <TextView
                                android:textColor="@color/color6"
                                android:text="@string/ins_text_feed_a"
                                android:textSize="12sp"
                                android:layout_width="110dp"
                                android:layout_height="match_parent" />

                            <TextView
                                android:textColor="@color/color6"
                                android:id="@+id/answercount"
                                android:layout_marginLeft="10dp"
                                android:text="120"
                                android:textSize="12sp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="10dp"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            >
                            <ImageView
                                android:src="@drawable/ic_ball_subject"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent" />
                            <TextView
                                android:textColor="@color/color6"
                                android:text="@string/ins_text_feed_e"
                                android:textSize="12sp"
                                android:layout_width="110dp"
                                android:layout_height="match_parent" />

                            <TextView
                                android:textColor="@color/color6"
                                android:id="@+id/estimation"
                                android:layout_marginLeft="10dp"
                                android:text="20"
                                android:textSize="12sp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="10dp"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            >
                            <ImageView
                                android:src="@drawable/ic_ball_subject"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent" />
                            <TextView
                                android:textColor="@color/color6"
                                android:text="@string/ins_text_feed_v"
                                android:textSize="12sp"
                                android:layout_width="110dp"
                                android:layout_height="match_parent" />

                            <TextView
                                android:textColor="@color/color6"
                                android:id="@+id/insvidecount"
                                android:layout_marginLeft="10dp"
                                android:text="20"
                                android:textSize="12sp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/color6"
                        android:text="*피드백 포인트 정보"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_width="110dp"
                        android:layout_height="match_parent" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="10dp"
                        android:orientation="horizontal"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        >
                        <ImageView
                            android:src="@drawable/ic_ball_subject"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />
                        <TextView
                            android:textColor="@color/color6"
                            android:text="@string/ins_text_p_pub_video"
                            android:textSize="10sp"
                            android:layout_width="80dp"
                            android:layout_height="match_parent" />

                        <TextView
                            android:textColor="@color/color6"
                            android:id="@+id/pubvideopoint"
                            android:layout_marginLeft="10dp"
                            android:text="1000P"
                            android:textSize="12sp"
                            android:layout_width="70dp"
                            android:layout_height="match_parent" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="10dp"
                        android:orientation="horizontal"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        >
                        <ImageView
                            android:src="@drawable/ic_ball_subject"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />
                        <TextView
                            android:textColor="@color/color6"
                            android:text="@string/ins_text_p_pub_word"
                            android:textSize="10sp"
                            android:layout_width="80dp"
                            android:layout_height="match_parent" />

                        <TextView
                            android:textColor="@color/color6"
                            android:id="@+id/pubwordpoint"
                            android:layout_marginLeft="10dp"
                            android:text="1000P"
                            android:textSize="12sp"
                            android:layout_width="70dp"
                            android:layout_height="match_parent" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="10dp"
                        android:orientation="horizontal"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        >
                        <ImageView
                            android:src="@drawable/ic_ball_subject"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />

                        <TextView
                            android:textColor="@color/color6"
                            android:text="@string/ins_text_p_team_video"
                            android:textSize="10sp"
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:id="@+id/textView" />

                        <TextView
                            android:textColor="@color/color6"
                            android:id="@+id/teamvideopoint"
                            android:layout_marginLeft="10dp"
                            android:text="1000P"
                            android:textSize="12sp"
                            android:layout_width="70dp"
                            android:layout_height="match_parent" />

                    </LinearLayout>
                    <LinearLayout
                        android:textColor="@color/color6"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="10dp"
                        android:orientation="horizontal"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        >
                        <ImageView
                            android:src="@drawable/ic_ball_subject"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />
                        <TextView
                            android:textColor="@color/color6"
                            android:text="@string/ins_text_p_team_word"
                            android:textSize="10sp"
                            android:layout_width="80dp"
                            android:layout_height="match_parent" />

                        <TextView
                            android:textColor="@color/color6"
                            android:id="@+id/teamwordpoint"
                            android:layout_marginLeft="10dp"
                            android:text="1000P"
                            android:textSize="12sp"
                            android:layout_width="70dp"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    >

                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="10dp"
                        android:orientation="horizontal"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        >
                        <ImageView
                            android:src="@drawable/ic_ball_subject"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />
                        <TextView
                            android:textColor="@color/color6"
                            android:text="@string/ins_text_p_pub_eval"
                            android:textSize="10sp"
                            android:layout_width="80dp"
                            android:layout_height="match_parent" />

                        <TextView
                            android:textColor="@color/color6"
                            android:id="@+id/pubpasspoint"
                            android:layout_marginLeft="10dp"
                            android:text="1000P"
                            android:textSize="12sp"
                            android:layout_width="70dp"
                            android:layout_height="match_parent" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="10dp"
                        android:orientation="horizontal"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        >
                        <ImageView
                            android:src="@drawable/ic_ball_subject"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />
                        <TextView
                            android:textColor="@color/color6"
                            android:text="@string/ins_text_p_team_eval"
                            android:textSize="10sp"
                            android:layout_width="80dp"
                            android:layout_height="match_parent" />

                        <TextView
                            android:textColor="@color/color6"
                            android:id="@+id/teampasspoint"
                            android:layout_marginLeft="10dp"
                            android:text="1000P"
                            android:textSize="12sp"
                            android:layout_width="70dp"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@color/line_color1" />

                <TextView
                    android:id="@+id/textImageCount"
                    android:text="@string/ins_introduce_title1"
                    android:textColor="@color/color6"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@color/line_color1" />

                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/address"
                            android:text="주소"
                            android:textColor="@color/color6"
                            android:textSize="15sp"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/currentteamname"
                            android:text="팀명"
                            android:textColor="@color/color6"
                            android:textSize="15sp"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/career1"
                            android:text="3.경력사항(1)"
                            android:textColor="@color/color6"
                            android:textSize="15sp"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/career2"
                            android:text="4.경력사항(2)"
                            android:textColor="@color/color6"
                            android:textSize="15sp"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/career3"
                            android:text="5.경력사항(3)"
                            android:textColor="@color/color6"
                            android:textSize="15sp"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/career4"
                            android:text="5.경력사항(3)"
                            android:textColor="@color/color6"
                            android:textSize="15sp"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/career5"
                            android:text="5.경력사항(3)"
                            android:textColor="@color/color6"
                            android:textSize="15sp"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/resume"
                            android:text="무엇이든지 물어보세요"
                            android:textColor="@color/color6"
                            android:textSize="15sp"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </LinearLayout>
                <View
                    android:background="@color/color8"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>


</ScrollView>