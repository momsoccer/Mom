<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/mom_color1"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:orientation="vertical"
        card_view:cardElevation="3dp"
        card_view:cardBackgroundColor="@color/color6">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color6">

            <View
                android:background="@drawable/xml_back_black"
                android:layout_width="match_parent"
                android:layout_height="2dp" />

            <View
                android:id="@+id/viewType"
                android:background="@drawable/xml_list_divider"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginBottom="2dp"/>


                <com.google.android.youtube.player.YouTubeThumbnailView
                    android:id="@+id/ThumbnailView"
                    android:layout_width="match_parent"
                    android:layout_height="200dp" />


            <LinearLayout
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color6">

                <TextView
                    android:layout_marginRight="10dp"
                    android:text="영상 시청은 이미지를 클릭!"
                    android:textSize="12sp"
                    android:textColor="@color/line_color1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    />

                <TextView
                    android:id="@id/subject"
                    android:text="Subject"
                    android:textSize="15sp"
                    android:textColor="@color/multiple_image_select_primaryText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


                <TextView
                    android:layout_marginTop="8dp"
                    android:id="@id/content"
                    android:text="Content"
                    android:textSize="12sp"
                    android:textColor="@color/color8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_margin="5dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:layout_marginTop="5dp"
                        android:id="@+id/shreBtn"
                        android:text="친구에게 공유하기"
                        style="@style/btnStyleWhite"
                        android:textSize="12sp"
                        android:layout_width="match_parent"
                        android:layout_height="35dp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>