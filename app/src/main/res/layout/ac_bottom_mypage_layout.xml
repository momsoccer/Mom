<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mom_color1"
    tools:context="com.mom.soccer.bottommenu.MyPageActivity"
    tools:ignore="MissingPrefix"
    >
    <android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/uprofile_toolbar"
        app:titleTextColor="@color/color6"
        android:background="@color/mom_color1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/mypage_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/toolbar_page_mypage"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/color6"
            android:layout_gravity="center"
            />

        <ImageView
            android:id="@+id/im_point"
            android:src="@drawable/ic_basic_mony"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            />

    </android.support.v7.widget.Toolbar>

    <include layout="@layout/mypage_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="11"
        />


    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="bottom"
        android:layout_weight="1"
        >
        <com.mom.soccer.tablayout.TabNaviComplaintBase
            android:id="@+id/PageNavigationView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </com.mom.soccer.tablayout.TabNaviComplaintBase>
    </LinearLayout>

</LinearLayout>
