<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mom_color1">

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

                <TextView
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:text="@string/point_req"
                    android:textSize="20sp"
                    android:textColor="@color/color6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

             <LinearLayout
                 android:layout_marginTop="20dp"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="5dp"
                 android:layout_marginRight="5dp"
                 >

                     <EditText
                         android:id="@+id/text_reason"
                         android:textSize="18sp"
                         android:textColor="@color/color6"
                         android:layout_width="match_parent"
                         android:layout_height="280dp"
                         android:maxLines="5"
                         android:lines="5"
                         android:background="@drawable/inputtext"
                         android:gravity="top"
                         android:hint="@string/point_req1"
                         android:textColorHint="@color/line_color1"
                         />

             </LinearLayout>
        </LinearLayout>



        <Button
            android:layout_alignParentBottom="true"
            android:id="@+id/btnPointReq"
            android:text="@string/point_req"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/btnStylePaprika"
            />

</RelativeLayout>