<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="125dp"
    android:layout_weight="1"
    android:orientation="vertical"
    android:background="@drawable/header_line"
    android:layout_marginTop="25dp"
    >


    <LinearLayout
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp"
        >

        <LinearLayout
            android:background="@color/mom_color1"
            android:layout_margin="5dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/nav_header_image"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:adjustViewBounds="true"
                android:src="@drawable/userimg"
                android:layout_gravity="center"
                android:maxWidth="70dp"
                android:maxHeight="70dp"
                />
        </LinearLayout>

        <LinearLayout
            android:background="@color/mom_color1"
            android:layout_margin="5dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/nav_header_username"
                android:text="@string/nav_header_name"
                android:textStyle="bold"
                android:textColor="@color/color6"
                android:textSize="18sp"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                />

            <TextView
                android:id="@+id/nav_header_useremail"
                android:text="@string/nav_header_email"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/line_color1"
                android:textSize="13sp"
                android:layout_width="250dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
