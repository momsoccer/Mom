<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorAccent">@color/color6</item>
        <item name="colorControlNormal">@color/color6</item>
        <item name="android:colorBackground">@color/mom_color1</item>
        <item name="android:textColorPrimary">@color/color6</item>
        <item name="android:textColorHint">@color/line_color1</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="BlackNoBarsTheme" parent="android:Theme.Black.NoTitleBar.Fullscreen" />

    <style name="BlackNoTitleBarTheme" parent="android:Theme.Black.NoTitleBar" />

    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="mom_text">
        <item name="android:textColor">@color/color6</item>
        <item name="android:textColorHint">@color/color2</item>
        <item name="android:background">@drawable/edit_off</item>
        <item name="android:layout_width">270dp</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="mom_edit_text">
        <item name="android:textColor">@color/color6</item>
        <item name="android:textColorHint">@color/color2</item>
        <item name="android:background">@drawable/edittext_background</item>
        <item name="android:layout_width">270dp</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="mom_m_edit_text">
        <item name="android:textColor">@color/color6</item>
        <item name="android:textColorHint">@color/color6</item>
        <item name="android:layout_width">270dp</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="btnStylePaprika" parent="@android:style/Widget.Button">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">0.6</item>
        <item name="android:background">@drawable/custom_btn_paprika</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="btnStyleBlack" parent="@android:style/Widget.Button">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">0.6</item>
        <item name="android:background">@drawable/custom_btn_black</item>

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="btnStyleWhite" parent="@android:style/Widget.Button">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">0.6</item>
        <item name="android:background">@drawable/custom_btn_white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="btnRefresh">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/mom_color1</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">wrap_content</item>

    </style>


    <style name="button" parent="@android:style/Widget.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">@color/color6</item>
        <item name="android:textSize">16sp</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_height">57dp</item>
        <item name="android:layout_width">fill_parent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="Custom" parent="android:Theme.DeviceDefault.Dialog">
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <item name="DialogTitleText">Updatingâ€¦</item>
        <item name="DialogSpotColor">@android:color/holo_orange_dark</item>
        <item name="DialogSpotCount">4</item>
    </style>

    <style name="CustomProgressDialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/color2</item>
        <item name="android:textSize">12sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/enabled_red</item>
        <item name="colorControlNormal">@color/edit_tx_off</item>
        <item name="colorControlActivated">@color/color6</item>
    </style>

    <style name="CustomStyledRadioButton" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/color6</item>
        <item name="colorControlActivated">@color/enabled_red</item>
    </style>

    <style name="TextLabelinput">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/color2</item>
        <item name="android:textColorLink">@color/enabled_red</item>
        <item name="android:textSize">10sp</item>
        <item name="colorAccent">@color/enabled_red</item>
        <item name="colorControlNormal">@color/edit_tx_off</item>
        <item name="colorControlActivated">@color/color6</item>
        <item name="textColorError">@color/enabled_red</item>
    </style>


</resources>
